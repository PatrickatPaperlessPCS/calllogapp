<%= render 'admin_header' %>
<p id="notice"><%= notice %></p>
<h3>Your Company's Check-ins</h3>
<table class="table table-striped">
  <thead class="padding">
    <tr>
      <th>Date</th>
      <th>Rep Name</th>
      <th>Contacttype</th>
      <th>Company</th>
      <th>Department</th>
      <th>Person</th>
      <th>Duration</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="padding">
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.try(:eventdate).try(:strftime, '%B %e, %Y')  %></td>
        <td><%= contact.user_name %></td>
        <td><%= contact.contacttype %></td>
        <td><%= contact.company %></td>
        <td><%= contact.department %></td>
        <td><%= contact.person %></td>
        <td><%= contact.duration %></td>
        <td><%= contact.admin.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
<br>
<span class="glyphicon glyphicon-cloud-download" aria-hidden="true"></span>  <%= link_to "Download in Excel", contacts_admin_path(format: "xls") %>
</center>