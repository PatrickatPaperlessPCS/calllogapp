<%= render 'header' %>
<p id="notice"><%= notice %></p>
<h3>Your Call Check-ins</h3>
<table class="table table-striped">
  <thead class="padding">
    <tr>
      <th>Date</th>
      <th>Contacttype</th>
      <th>Company</th>
      <th>Department</th>
      <th>Person</th>
      <th>Duration</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="padding">
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.try(:eventdate).try(:strftime, '%B %e, %Y') %></td>
        <td><%= contact.contacttype %></td>
        <td><%= contact.company %></td>
        <td><%= contact.department %></td>
        <td><%= contact.person %></td>
        <td><%= contact.duration %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Delete Record', contact, method: :delete, data: { confirm: 'Are you sure you want to delete this Check-in?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
  <%= will_paginate @posts %>
<br>
<%= button_to '+ New Check-in', new_contact_path, :class => 'btn btn-large btn-success', :method => :get  %>  
<br>
<span class="glyphicon glyphicon-cloud-download" aria-hidden="true"></span>  <%= link_to "Download in Excel", contacts_path(format: "xls") %>
</center>